<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--推荐使用类似类的完全限定名-->
<mapper namespace="com.kaishengit.mapper.StudentMapper">
    
    <resultMap id="baseMap" type="com.kaishengit.entity.Student">
        <id column="id" property="id" />
        <result column="student_name" property="userName"/>
        <result column="age" property="age"/>
        <result column="address" property="address"/>
        <result column="id" property="schoolId"/>
    </resultMap>
    
    <resultMap id="studentMap" type="com.kaishengit.entity.Student" extends="baseMap">
        <association property="school" javaType="com.kaishengit.entity.School">
            <id column="id" property="id"/>
            <result column="school_name" property="schoolName"/>
            <result column="tel" property="tel"/>
        </association>

    </resultMap>
    
    <select id="findById" parameterType="int" resultMap="studentMap">
      SELECT
	        stu.id,
            stu.student_name,
            stu.age,
            stu.address,
            stu.shcool_id,
            sch.school_name,
            sch.tel
        FROM
            t_student stu
        INNER JOIN t_school sch ON stu.shcool_id = sch.id
        WHERE
	  stu.id = #{id};

    </select>

    <select id="findId" parameterType="int" resultType="com.kaishengit.entity.Student">
        SELECT
            stu.id,
            stu.student_name,
            stu.age,
            stu.address,
            stu.shcool_id,
            sch.id as 'school.id',
            sch.school_name as 'school.schoolName',
            sch.tel as 'school.tel'
        FROM
          t_student stu
        INNER JOIN t_school sch ON stu.shcool_id = sch.id
        WHERE
         stu.id = #{id};

    </select>

    <select id="findAll" resultMap="studentMap">
        SELECT
            stu.id,
            stu.student_name,
            stu.age,
            stu.address,
            stu.shcool_id,
            sch.school_name,
            sch.tel
        FROM
           t_student stu
        INNER JOIN t_school sch ON stu.shcool_id = sch.id

    </select>


</mapper>